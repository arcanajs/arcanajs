{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true
  },
  "include": ["src/lib/**/*", "src/cli/**/*"]
}
